{
    "name": "root",
    "private": true,
    "scripts": {
        "all:outdated": "yarn outdated",
        "all:upgrade": "yarn upgrade-interactive --latest",
        "lint:ci": "eslint '*/**/*.{ts,tsx}' --report-unused-disable-directives",
        "lint:fix": "eslint '*/**/*.{ts,tsx}' --fix",
        "test:unit": "yarn workspace amplify-material-ui test",
