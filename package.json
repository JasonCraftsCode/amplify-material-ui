{
    "name": "root",
    "private": true,
    "scripts": {
        "storybook": "yarn workspace amplify-material-ui storybook",
        "grooming:outdated": "yarn outdated",
        "grooming:upgrade": "yarn upgrade-interactive --latest",
        "lint": "eslint . --cache  --report-unused-disable-directives",
        "lint:ci": "eslint . --report-unused-disable-directives",
        "lint:fix": "eslint . --cache --fix",
        "test:unit": "yarn workspace amplify-material-ui test",
        "test:e2e": "yarn workspace e2e-tests test"
    },
    "workspaces": [
        "e2e-tests",
        "amplify-material-ui"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.9.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.13.0",
        "lerna": "^3.10.5",
        "prettier": "^1.18.2"
    }
}
