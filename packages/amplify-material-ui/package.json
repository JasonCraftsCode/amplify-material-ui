{
    "name": "amplify-material-ui",
    "version": "0.0.20",
    "description": "A Material-UI based implementation of aws amplify",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/hupe1980/mplify-material-ui",
        "directory": "packages/amplify-material-ui"
    },
    "keywords": [
        "material-ui",
        "react",
        "aws amplify",
        "amplify",
        "cognito",
        "aws",
        "auth"
    ],
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "storybook": "start-storybook",
        "clean": "rimraf lib",
        "build": "cross-env NODE_ENV=development run-s clean build:**",
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "babel src --out-dir lib --extensions '.ts,.tsx' --ignore '**/__tests__, **/__stories__'",
        "watch": "cross-env NODE_ENV=development npm-run-all clean -pl watch:**",
        "watch:types": "tsc -w --emitDeclarationOnly",
        "watch:js": "babel src --out-dir lib --extensions '.ts,.tsx' --ignore '**/__tests__, **/__stories__' --watch",
        "prepare": "npm run build",
        "test": "jest --env=jsdom"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "clsx": "^1.0.4",
        "formik": "^2.0.1-rc.5",
        "react-is-mounted-hook": "^1.0.1",
        "react-recaptcha-hook": "^1.0.5",
        "react-script-hook": "^1.0.11",
        "tiny-invariant": "^1.0.6",
        "zxcvbn": "^4.4.2"
    },
    "peerDependencies": {
        "@aws-amplify/auth": "^1.2.24",
        "@aws-amplify/core": "^1.0.27",
        "@material-ui/core": "^4.0.1",
        "@material-ui/icons": "^4.0.1",
        "react": "^16.8.6",
        "react-dom": "^16.8.6"
    },
    "devDependencies": {
        "@aws-amplify/auth": "^1.2.30",
        "@aws-amplify/core": "^1.0.31",
        "@babel/cli": "^7.6.0",
        "@babel/core": "^7.6.0",
        "@material-ui/core": "^4.4.1",
        "@material-ui/icons": "^4.4.1",
        "@storybook/addon-actions": "^5.1.10",
        "@storybook/addon-storyshots": "^5.1.10",
        "@storybook/react": "^5.1.10",
        "@testing-library/react": "^9.1.4",
        "@types/jest": "^24.0.16",
        "@types/storybook__addon-storyshots": "^5.1.1",
        "@types/storybook__react": "^4.0.2",
        "@types/zxcvbn": "^4.4.0",
        "babel-jest": "^24.8.0",
        "babel-loader": "^8.0.6",
        "babel-plugin-dev-expression": "^0.2.2",
        "babel-plugin-macros": "^2.6.1",
        "babel-plugin-react-remove-properties": "^0.3.0",
        "babel-preset-react-app": "^9.0.0",
        "cross-env": "^5.2.1",
        "jest": "^24.8.0",
        "npm-run-all": "^4.1.5",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-test-renderer": "^16.8.6",
        "require-context.macro": "^1.2.1",
        "rimraf": "^3.0.0",
        "typescript": "^3.6.2"
    }
}
