{
  "name": "amplify-material-ui",
  "version": "0.0.40",
  "description": "A Material-UI based implementation of aws amplify",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hupe1980/amplify-material-ui",
    "directory": "packages/amplify-material-ui"
  },
  "keywords": [
    "material-ui",
    "react",
    "aws amplify",
    "amplify",
    "cognito",
    "aws",
    "auth"
  ],
  "main": "dist/index.js",
  "module": "dist/amplify-material-ui.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom --coverage --maxWorkers=2",
    "lint": "tsdx lint",
    "prepare": "yarn run build"
  },
  "dependencies": {
    "amplify-auth-hooks": "^0.0.8",
    "clsx": "^1.0.4",
    "formik": "^2.0.6",
    "formik-material-ui": "^1.0.0",
    "langtag-utils": "^2.0.0",
    "qrcode.react": "^1.0.0",
    "react-intl": "^3.8.0",
    "react-recaptcha-hook": "^1.0.5",
    "tiny-invariant": "^1.0.6"
  },
  "peerDependencies": {
    "@aws-amplify/core": "^1.0.27",
    "@material-ui/core": "^4.0.1",
    "@material-ui/icons": "^4.0.1",
    "react": ">=16"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@aws-amplify/core": "^1.2.4",
    "@material-ui/core": "^4.7.1",
    "@material-ui/icons": "^4.0.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/qrcode.react": "^1.0.0",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "babel-plugin-optimize-clsx": "^2.5.0",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "jest": {
    "globals": {
      "__DEV__": "boolean"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.ts"
    ]
  },
  "sideEffects": false
}
